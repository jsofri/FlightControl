<Window x:Class="PlaneController.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Error" WindowStartupLocation="CenterScreen"
        Height="150" Width="250"
        Style="{StaticResource WindowStyle}">
    <Grid>
        <Label x:Name="Message" Style="{StaticResource LabelTitleStyle}" Content="Default message" HorizontalAlignment="Left" Margin="0,-2,0,54.8" Width="243" 
               VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="68" >
        </Label>
        <Button Style="{StaticResource ButtonStyle}" Content="OK" FontSize="15" Margin="85,0,83.2,9.8"
                Click="Button_Click" HorizontalAlignment="Center" Width="75" VerticalAlignment="Bottom" Height="28"/>
    </Grid>
</Window>
